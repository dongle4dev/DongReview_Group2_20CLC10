<div class="container">
    <div class="mt-4">
        <div class="row">
            {{#each films}}
            <div class="col-sm-6 col-lg-3" style="margin-top: 16px; margin-right: 16px;">
                <a href="/films/{{this.slug}}">
                    <div class="card" style="width: 18rem;">
                    <img class="card-img-top" style="height: 18rem;" src="{{this.img}}" alt="{{this.img}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Xem review</a>
                    </div>
                </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>