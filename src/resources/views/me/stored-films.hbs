<div class="container">
    <h2>LIST OF UPLOADED FILMS</h2>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Uploaded at</th>
            <th scope="col">Updated at</th>
            </tr>
        </thead>
        <tbody>
            {{#each films}}
            <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.title}}</td>
            <td>{{this.createdAt}}</td>
            <td>{{this.updatedAt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>